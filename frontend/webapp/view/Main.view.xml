<mvc:View controllerName="my.frontend.app.frontend.controller.Main" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<List
							items="{/Categories}"
							headerText="Categories"
							growing="true"
							growingThreshold="10"
							growingScrollToLoad="false">
							<StandardListItem
								title="{CategoryName}"
								description="{Description}"
								iconDensityAware="false"
								iconInset="false" />
						</List>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>